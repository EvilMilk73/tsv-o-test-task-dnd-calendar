{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/vite.config.ts",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "apps/api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/index.html"
    }
  ]
}
